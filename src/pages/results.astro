--- 
import Buscador from "../components/Buscador.astro"
import Layout from "../layouts/Layout.astro"

---

<Layout title="RedWork - Página de Resultados">
  <!-- Barra de navegación -->
  <header>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="styles.css">
  </header>

  <Buscador />

  <!-- Resultados -->
  <section class="results">
    {Array(6).fill(0).map(() => (
      <div class="result-item">
        <div class="available-badge">Disponible</div>
        <div class="result-content">
          <div class="text-content">
            <h3>Pedro Pablo Perez Pereira</h3>
            <p>Soldador, Cerrajero, realizo todo tipo de trabajo con acero</p>
            <div class="rating">
              <span>⭐ 4.5 / 5.0</span>
            </div>
            <button class="contact-btn"><i class="fab fa-whatsapp" ></i> Contactar</button>
          </div>
          <div class="image-content">
            <img src="public/imagen_trabajador.png" alt="Foto de Pedro Pablo Perez Pereira">
          </div>
        </div>
      </div>
    ))}
  </section>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js" defer></script>
  <script src="script.js" defer></script>
</Layout>
