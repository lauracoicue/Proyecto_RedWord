<style>
    @media screen and (max-width: 1024px) {    .desktop-view {
            display: none;    }
    }
	@media screen and (min-width: 1023px) {    .mobile-view {
			display: none;    }
	}
    .perfil{
        width: 90%;
        border-radius: 3rem;
        border-color:rgb(190, 188, 188);
        box-shadow: 2px 2px 2px 2px rgba(32,32,32,0.3);

    }
    /* Contenedor del botón */
    .toggle-button {
    display: flex;
    border: 2px solid #d32f2f;
    border-radius: 100px;
    overflow: hidden;
    width: 60%;
    }

    /* Botones */
    .toggle-button button {
    flex: 1;
    padding: 10px 20px;
    border: none;
    background: none;
    font-size: 16px;
    cursor: pointer;
    color: #d32f2f;
    font-weight: bold;
    transition: background-color 0.3s, color 0.3s;
    }

    /* Botón activo */
    .toggle-button .active {
    background-color: #d32f2f;
    color: #fff;
    }

    /* Quitar enfoque visual al hacer clic */
    .toggle-button button:focus {
    outline: none;
    }

    .image-container {
            width: 100%; 
            max-height: 300px;
            max-width: 500px;
            aspect-ratio: 1 / 1; 
            background-color: #f0f0f0; 
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden; 
            border-radius: 8px;
            width: 100%; /* O el tamaño que necesites */
            background-color: #f0f0f0; 

        }

        .image-container img {
            width: 100%; 
            height: 200%; 
            min-width: 0;
            object-fit: cover; 
            object-position: center; 
            position: absolute; 
            top: 0; 
            left: 0; 
            transition: transform 0.3s; 
            object-fit: cover; /* Asegura que la imagen llene el espacio */
            object-position: center center;
        }
        .columns-layout {
        display: grid;
        grid-template-columns: 1fr 1fr; /* Dos columnas iguales */
        gap: 20px; /* Espacio entre las columnas */
        width: 100%; /* Ocupa todo el ancho disponible */
        }

        /* Asegura que cada columna ocupa su espacio */
        .perfil-column,
        .trabajos-column {
            box-sizing: border-box; /* Incluye padding y border en el tamaño */
            min-width: 0; /* Previene que el contenido desborde */
        }
        .responsive-photo {
        width: 100%; /* Se ajusta al tamaño del contenedor */
        max-width: 100%; /* No se desborda */
        height: auto; /* Mantiene proporción */
        border-radius: 50%; /* Hace la imagen circular */
        }
</style>
<script>
    async function load() {
    const id = window.location.search.split('?')[1]; // Obtener el ID desde la URL
    try {
        const response = await fetch(`http://localhost:3000/api/workers/${id}`);
        const ratingsResponse = await fetch(`http://localhost:3000/api/ratings/${id}`);
        const worker = await response.json();
        const ratings = await ratingsResponse.json();


        // Validar si existe el atributo `link`
        if (!worker.link) {
            console.error('El atributo "link" no está definido en el trabajador');
            return;
        }

        // Validar si existen imágenes en `workImages`
        if (!worker.workImages || worker.workImages.length === 0) {
            console.error('No se encontraron imágenes en workImages');
            return;
        }
        

        // Llenar los datos en los contenedores correspondientes
        document.querySelectorAll('.photo').forEach((container) => {
            container.innerHTML = ''; // Limpiar contenido previo
            const img = document.createElement('img');
            img.src = worker.photo;
            img.alt = 'Foto de perfil';
            img.classList.add('responsive-photo'); // Agregar clase para estilos
            container.appendChild(img);
        });
        
        document.querySelectorAll('.rating').forEach((rating) => {
            rating.textContent = ratings.average;
        });

        document.querySelectorAll('.reseñas-section').forEach((reseñasSection) => {
            ratings.ratings.forEach((rating:any) => {

                const div = document.createElement('div');
                div.className = 'flex flex-col';

                const date = document.createElement('h3');
                date.textContent = rating.date;
                date.className = 'text-gray-600 text-xs';
                const name = document.createElement('h2');
                name.textContent = rating.client;
                name.className = 'text-red-500 font-bold';

                div.appendChild(name);
                div.appendChild(date);

                const calificacion = document.createElement('span');
                calificacion.textContent = rating.rating;
                calificacion.className = 'text-gray-600';
                const puntuacion = document.createElement('section');
                puntuacion.className = 'star flex mx-11 justify-between mobile-view';
                puntuacion.appendChild(div);
                puntuacion.appendChild(calificacion);              
                reseñasSection.appendChild(puntuacion);
            });
        });

        document.querySelectorAll('.fullName').forEach((name) => {
            name.textContent = worker.fullName;
        });

        document.querySelectorAll('.job').forEach((job) => {
            job.textContent = worker.job;
        });

        // Añadir evento a todos los botones de contacto
        document.querySelectorAll('.contact-button').forEach((contactButton) => {
            contactButton.addEventListener('click', () => {
                window.location.href = worker.link; // Redirigir al enlace
            });
        });

        // Mostrar las imágenes de `workImages` en la sección específica
        const workImagesContainer = document.querySelector('.desktop-view .grid');
        if (workImagesContainer) {
            workImagesContainer.innerHTML = ''; // Limpiar contenido previo
        }

        worker.workImages.forEach((imageUrl: string) => {
            const imageDiv = document.createElement('div');
            imageDiv.className = 'flex items-center justify-center border rounded-3xl border-gray-200 bg-gray-200 h-80';
            
            const img = document.createElement('img');
            img.src = imageUrl;
            img.alt = 'Imagen del trabajo';
            img.className = 'w-full h-full object-cover rounded-3xl';

            imageDiv.appendChild(img);
            if (workImagesContainer) {
                workImagesContainer.appendChild(imageDiv);
            }
        });
        const mobileWorkImagesContainer = document.querySelector('.mobile-view .scrolling-container');
        if (mobileWorkImagesContainer) {
            mobileWorkImagesContainer.innerHTML = ''; // Limpiar contenido previo
        }
        worker.workImages.forEach((imageUrl: string) => {
            const imageDiv = document.createElement('div');
            imageDiv.className = 'flex-none border rounded-3xl border-gray-200 bg-gray-200  w-48 h-48 text-center';
            
            const img = document.createElement('img');
            img.src = imageUrl;
            img.alt = 'Imagen del trabajo';
            img.className = 'w-full h-full object-cover rounded-3xl';

            imageDiv.appendChild(img);
            if (mobileWorkImagesContainer) {
                mobileWorkImagesContainer.appendChild(imageDiv);
            }
        });
    } catch (error) {
        console.error('Error al cargar los datos del trabajador:', error);
    }
}

load();

document.querySelectorAll('.toggle-button button').forEach((button) => {
    button.addEventListener('click', () => {
        // Cambiar la clase 'active' en los botones
        document.querySelectorAll('.toggle-button button').forEach((btn) => {
            btn.classList.remove('active');
        });
        button.classList.add('active');

        // Alternar entre las secciones de trabajos y reseñas
        const isTrabajos = button.textContent === "Trabajos"; // Verifica si el botón es "Trabajos"
        
        const trabajosSection = document.querySelector('.trabajos-section');
        const reseñasSection = document.querySelector('.reseñas-section');
        
        if (trabajosSection && reseñasSection) {
            if (isTrabajos) {
                trabajosSection.classList.remove('hidden');
                reseñasSection.classList.add('hidden');
            } else {
                trabajosSection.classList.add('hidden');
                reseñasSection.classList.remove('hidden');
            }
        }
    });
});
</script>

