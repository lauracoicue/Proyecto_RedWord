---
import Puntuacion from "../components/Puntuacion.astro";
import Layout from "../layouts/Layout.astro";
import Trabajos_Realizados from "../components/Trabajos_Realizados.astro";

---

<Layout title="Perfil">
    <section class="mobile-view">
        <div class="columns-2 items-center justify-center p-16 mx-10 ">
          <div class="photo image-container -mx-20"></div>
            <div class="flex flex-col p-8">
                <h2 class="font-bold text-sm/3 -mx-20 fullName"></h2>
                <h3 class="my-2 text-3xs -mx-20 job" ></h3>
                <div class="-mx-20 text-xs flex-col">
                    <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" width="512" height="512" x="0" y="0" viewBox="0 0 24 24" style="enable-background:new 0 0 512 512" xml:space="preserve" class="size-3 absolute">
