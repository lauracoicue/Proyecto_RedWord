<script>
    document.addEventListener("DOMContentLoaded", () => {
    const searchInput = document.querySelector(".search-input1");
    const searchInput2 = document.querySelector(".search-input2");
    const overlay = document.getElementById("overlay");
    const overlay2 = document.getElementById("overlay2");
    const backButton = document.querySelector(".back-btn");
    const backButton2 = document.querySelector(".back-btn2");

    // Función para mostrar la ventana emergente
    const showOverlay = (overlay: HTMLElement) => {
        overlay.classList.add("visible");
        document.body.classList.add("overlay-active");
    };

    // Función para ocultar la ventana emergente
    const hideOverlay = (overlay: HTMLElement) => {
        overlay.classList.remove("visible");
        document.body.classList.remove("overlay-active");
    };

    if (searchInput && overlay && backButton) {
        searchInput.addEventListener("click", () => {
            showOverlay(overlay);
        });

        backButton.addEventListener("click", () => {
            hideOverlay(overlay);
        });
    }

    if (searchInput2 && overlay2 && backButton2) {
        searchInput2.addEventListener("click", () => {
            showOverlay(overlay2);
        });

        backButton2.addEventListener("click", () => {
            hideOverlay(overlay2);
        });
    }
});


