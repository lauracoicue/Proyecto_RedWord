---
const currentUrl = Astro.url.pathname;
const shouldShowFilters = currentUrl.includes("/results");
const searchFormClass = shouldShowFilters ? "search-form no-rounded-borders" : "search-form rounded-borders";
---

<!-- Formulario de búsqueda -->
<section class="search-section">
    <div class="contsearch">
        <form class={searchFormClass}>
        <div class="input-container">
            <i class="fas fa-briefcase text-red-500"></i>
            <input type="text" placeholder="Servicio o categoría" class="search-input1 mx-3">
        </div>
        <div class="input-container">
            <i class="fas fa-map-marker-alt text-red-500"></i>
            <input type="text" placeholder="Ubicación" class="search-input2 mx-3">
        </div>
        <button type="submit" class="search-btn"><i class="fas fa-search"></i> Buscar</button>
        </form>

        {shouldShowFilters && (
        <form class="search-form2">
            <div class="filter-options">
                <select>
                    <option value="disponibilidad">Disponibilidad</option>
                </select>
                <select>
                    <option value="puntaje">Puntaje</option>
                </select>
            </div>
        </form>
        )}
    </div>
  </section>

<style> 

    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Arial, sans-serif;
}

body {
    display: flex;
    font-family: Arial, Helvetica, sans-serif;
    margin: 0;
    padding: 0;
    flex-direction: column;
    min-height: 100vh;
    background-color: #f7f7f7;
}

/*--------------------------------*/
@media (max-width: 768px) {

    button {
        margin: 10px;
    }

    #nav {
        position: fixed; /* Fijo para que se superponga en la pantalla */
        top: 50%; /* Centro vertical */
        left: 50%; /* Centro horizontal */
        transform: translate(-50%, -50%); /* Ajusta para centrar */
        width: 300px; /* Ancho del rectángulo */
        height: 500px; /* Altura del rectángulo */
        background-color: red; /* Fondo rojo */
        z-index: 1000; /* Valor alto para que se superponga sobre otros elementos */
        display: none; /* Oculto por defecto */
        color: white; /* Texto en blanco para contraste */
        text-align: center; /* Centrar el texto */
        padding: 20px; /* Espacio interno */
        border-radius: 10px; /* Bordes redondeados */
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        
    }

    #nav.visible {
        display: flex; /* Muestra el menú cuando tiene la clase 'visible' */
    }

    .back-btn {
        position: fixed;
        top: 10px;
        left: 10px;
        background-color: transparent;
        border: none;
        color: white;
        font-size: 24px;
        cursor: pointer;
        z-index: 1100;
    }

    .buscador {
        position: relative; /* Posición relativa para 'z-index' */
        z-index: 0; /* Valor menor para estar debajo del menú */
    }

}
/*----------------------------------------------------------------*/

/* Menú móvil */
#mobile-menu {
    display: none;
    cursor: pointer;
}

#menu {
    display: none;
    flex-direction: column;
    gap: 1em;
}   

#menu.activate {
    display: flex;
}

.nav-links {
    display: flex;
}

@media (max-width: 769px) {
    .nav-links {
        display: none;
        flex-direction: column;
    }
    #mobile-menu {
        display: block;
    }
}

@media (min-width: 769px) {
    #menu {
        display: flex;
        flex-direction: row;
    }
}

/* Formulario de búsqueda */

.search-section {
    position: relative;
    height: 350px; /* Ajusta según la altura que desees */
    display: flex;
    justify-content: center;
    align-items: center;
    border-bottom-left-radius: 25px;
    border-bottom-right-radius: 25px;
    overflow: hidden;
}

@media (min-width: 1024px) {
    .search-section {
        background-image: url('public/hero.jpg');
        background-size: cover;
        background-position: center;
        width: 100%;
        height: 400px;
    }

    .search-form {
        background-color: #ffffff; /* Fondo del formulario */
        padding: 5px 20px;
        border-radius: 25px;
        /*box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);*/
        display: flex;
        gap: 15px;
        align-items: center;
        flex-wrap: wrap;
        justify-content: center;
        z-index: 1;
        border-bottom-left-radius: 0px;
        border-bottom-right-radius: 0px;
    }
    .search-form2 {
        background-color: rgb(218, 43, 43); /* Fondo del formulario */
        padding: 10px 20px;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        justify-content: center;
        z-index: 1;
        border-top: 1px solid #ccc; /* Borde superior de 1px, color gris claro */
        border-bottom-left-radius: 30px;
        border-bottom-right-radius: 30px;
    }

    /*cambios*/
    .input-container {
        position: flex;
        display: inline-block; /* Asegura que los contenedores se alineen horizontalmente */
        margin-right: 15px; /* Añade espacio entre los inputs */
    }
    

<style>
    @media screen and (max-width: 768px) {    .desktop-view {
            display: none;    }
    }

    .input-wrapper {
        position: relative;
        width: 271px-
    }

    .input-icon {
       
        position: absolute;
        left: 10px; /* Posiciona el ícono dentro del campo */
