    /*Ventana emergente*/
    .overlay {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 500px; /* Ancho de la ventana */
        background-color: #fff;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        border-radius: 10px;
        z-index: 1000;
        padding: 20px;
        visibility: hidden; /* Oculta la ventana por defecto */
        opacity: 0; /* Hace la ventana invisible */
        transition: visibility 0s, opacity 0.3s ease-in-out; /* Animación */
    }

    /* Mostrar la ventana */
    .overlay.visible {
        visibility: visible;
        opacity: 1;
