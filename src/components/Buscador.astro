        transform: translateY(-50%);
        color: #df1b1b;
        z-index: 10;
    }
    
    .search-input1,
    .search-input2 {
        padding-left: 10px; /* Asegura espacio suficiente para el ícono */
        padding: 10px 20px;
        border-radius: 25px;
